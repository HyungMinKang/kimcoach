<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/dark_purple">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="48dp"
            tools:context=".ui.home.MatchResultFragment">

            <TextView
                android:id="@+id/tv_match_result_title"
                style="@style/HeadLine4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="매치 결과"
                android:textColor="@color/white"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_match_result_date"
                style="@style/HeadLine5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="2022년 11월 14일 경기 결과"
                app:layout_constraintEnd_toEndOf="@id/tv_match_result_title"
                android:textColor="@color/white"
                app:layout_constraintStart_toStartOf="@id/tv_match_result_title"
                app:layout_constraintTop_toBottomOf="@id/tv_match_result_title" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_match_result_analysis"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:layout_marginHorizontal="12dp"
                android:background="@drawable/btn_radius_white"
                app:layout_constraintTop_toBottomOf="@id/tv_match_result_date">

                <TextView
                    android:id="@+id/tv_match_result_player_name"
                    style="@style/HeadLine5"
                    android:layout_width="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_height="wrap_content"
                    android:text="선수명: XXX"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="12dp"
                    android:textColor="@color/black"
                    app:layout_constraintStart_toStartOf="parent" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toEndOf="@id/tv_match_result_player_name"
                    android:text="포지션 : CF"
                    android:layout_marginStart="24dp"
                    android:textColor="@color/black"
                    app:layout_constraintTop_toTopOf="@id/tv_match_result_player_name"
                    style="@style/HeadLine5"
                    />
                <View
                    android:id="@+id/divider_match_result_first"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginTop="12dp"
                    app:layout_constraintTop_toBottomOf="@id/tv_match_result_player_name"
                    android:background="@color/dark_purple"
                    />

                <TextView
                    android:id="@+id/tv_macth_result_run_distance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/divider_match_result_first"
                    android:layout_marginTop="12dp"
                    android:text="뛴 거리: 19.2km"
                    style="@style/HeadLine5"
                    android:textColor="@color/black"
                    app:layout_constraintStart_toStartOf="@id/tv_match_result_player_name"
                    />

                <TextView
                    android:id="@+id/tv_match_result_fastest_velocity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/tv_macth_result_run_distance"
                    app:layout_constraintStart_toStartOf="@id/tv_match_result_player_name"
                    android:text="최고속도: xx.km/h"
                    style="@style/HeadLine5.Black"
                    android:layout_marginTop="12dp"
                    />
                <TextView
                    android:id="@+id/tv_match_result_average_velocity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/tv_match_result_fastest_velocity"
                    app:layout_constraintStart_toStartOf="@id/tv_match_result_player_name"
                    android:text="평균속도: xx.km/h"
                    android:layout_marginTop="12dp"
                    style="@style/HeadLine5.Black"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/tv_match_result_average_velocity"
                    app:layout_constraintStart_toStartOf="@id/tv_match_result_player_name"
                    android:id="@+id/tv_match_result_pass_count"
                    style="@style/HeadLine5.Black"
                    android:layout_marginTop="12dp"
                    android:text="패스 시도수: 72회"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="@id/tv_match_result_pass_count"
                    app:layout_constraintStart_toEndOf="@id/tv_match_result_pass_count"
                    android:layout_marginStart="12dp"
                    style="@style/HeadLine5.Black"

                    android:text="패스 성공률: 88%"/>

                <TextView
                    android:id="@+id/tv_match_result_short_kick_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/tv_match_result_pass_count"
                    app:layout_constraintStart_toStartOf="@id/tv_match_result_player_name"
                    android:text="숏 킥: 55회"
                    style="@style/HeadLine5.Black"
                    android:layout_marginTop="12dp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toEndOf="@id/tv_match_result_short_kick_count"
                    android:layout_marginStart="24dp"
                    style="@style/HeadLine5.Black"
                    app:layout_constraintTop_toTopOf="@id/tv_match_result_short_kick_count"
                    android:text="롱 킥: 12회"
                    />

                <TextView
                    android:id="@+id/tv_match_result_running_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/tv_match_result_short_kick_count"
                    app:layout_constraintStart_toStartOf="@id/tv_match_result_player_name"
                    android:text="뛴 시간: 88분"
                    android:layout_marginTop="12dp"
                    style="@style/HeadLine5.Black"
                    />

                <TextView
                    android:id="@+id/tv_match_result_average_heart_beat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/tv_match_result_running_time"
                    app:layout_constraintStart_toStartOf="@id/tv_match_result_player_name"
                    android:text="평균 심박수: 99"
                    style="@style/HeadLine5"
                    android:layout_marginTop="12dp"
                    />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/tv_match_result_heat_map_title"
                style="@style/HeadLine5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="24dp"
                android:text="히트맵"
                android:textColor="@color/white"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/cl_match_result_analysis" />

            <ImageView
                android:id="@+id/iv_match_result_heat_map"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_marginHorizontal="12dp"
                android:layout_marginTop="12dp"
                android:background="@drawable/heatmap_sample"
                app:layout_constraintTop_toBottomOf="@id/tv_match_result_heat_map_title" />

            <TextView
                android:id="@+id/tv_match_result_replay_title"
                style="@style/HeadLine5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="매치 리플레이"
                android:textColor="@color/white"
                app:layout_constraintStart_toStartOf="@id/tv_match_result_heat_map_title"
                app:layout_constraintTop_toBottomOf="@id/iv_match_result_heat_map" />

            <VideoView
                android:id="@+id/vv_match_result"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_marginHorizontal="12dp"
                android:layout_marginTop="12dp"
                app:layout_constraintTop_toBottomOf="@id/tv_match_result_replay_title"
                tools:layout_editor_absoluteX="8dp" />


            <ProgressBar
                android:id="@+id/pg_match_result_video"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@id/vv_match_result"
                app:layout_constraintStart_toStartOf="@id/vv_match_result"
                app:layout_constraintEnd_toEndOf="@id/vv_match_result"
                app:layout_constraintBottom_toBottomOf="@id/vv_match_result"
                />

            <com.github.mikephil.charting.charts.RadarChart
                android:id="@+id/radar_chart_match_result"
                android:layout_width="match_parent"
                android:layout_height="400dp"
                tools:layout_editor_absoluteX="20dp"
                tools:layout_editor_absoluteY="1012dp" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
</layout>