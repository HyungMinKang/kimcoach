<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/dark_purple"
    tools:context=".ui.my.MyFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginHorizontal="8dp"
        android:id="@+id/cl_my_profile_info"
        android:paddingBottom="12dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@drawable/btn_radius_white"
        >

        <ImageView
            android:id="@+id/iv_my_profile_image"
            android:layout_width="150dp"
            android:layout_height="150dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:background="@drawable/ic_baseline_person_24"
            android:layout_marginStart="12dp"
            android:layout_marginTop="12dp"
            />
        <TextView
            android:id="@+id/tv_my_name_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="이름:  "
            android:layout_marginTop="12dp"
            style="@style/HeadLine5.Black"
            app:layout_constraintTop_toTopOf="@id/iv_my_profile_image"
            app:layout_constraintStart_toEndOf="@id/iv_my_profile_image"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/tv_my_name_title"
            app:layout_constraintTop_toTopOf="@id/tv_my_name_title"
            style="@style/HeadLine5.Black"
            app:layout_constraintBottom_toBottomOf="@id/tv_my_name_title"
            android:text="홍길동"
            />

        <TextView
            android:id="@+id/tv_my_age_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="나이:  "
            android:layout_marginTop="12dp"
            style="@style/HeadLine5.Black"
            app:layout_constraintTop_toBottomOf="@id/tv_my_name_title"
            app:layout_constraintStart_toEndOf="@id/iv_my_profile_image"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/tv_my_name_title"
            app:layout_constraintTop_toTopOf="@id/tv_my_age_title"
            style="@style/HeadLine5.Black"
            app:layout_constraintBottom_toBottomOf="@id/tv_my_age_title"
            android:text="27"
            />

        <TextView
            android:id="@+id/tv_my_position_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="주요 포지션:  "
            android:layout_marginTop="12dp"
            style="@style/HeadLine5.Black"
            app:layout_constraintTop_toBottomOf="@id/tv_my_age_title"
            app:layout_constraintStart_toEndOf="@id/iv_my_profile_image"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/tv_my_position_title"
            app:layout_constraintTop_toTopOf="@id/tv_my_position_title"
            style="@style/HeadLine5.Black"
            app:layout_constraintBottom_toBottomOf="@id/tv_my_position_title"
            android:text="CF, RW"
            />

        <View
            android:id="@+id/divider_my_profile"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/dark_purple"
            app:layout_constraintTop_toBottomOf="@id/iv_my_profile_image"
            />
        <TextView
            android:id="@+id/tv_my_recent_match_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/divider_my_profile"
            app:layout_constraintStart_toStartOf="@id/iv_my_profile_image"
            android:layout_marginStart="12dp"
            android:layout_marginTop="4dp"
            android:text="최근전적:  "
            style="@style/HeadLine5.Black"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/tv_my_recent_match_title"
            app:layout_constraintTop_toTopOf="@id/tv_my_recent_match_title"
            style="@style/HeadLine5.Black"
            app:layout_constraintBottom_toBottomOf="@id/tv_my_recent_match_title"
            android:text="11승 3무 8패"
            />

        <TextView
            android:id="@+id/tv_my_win_rate_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tv_my_recent_match_title"
            app:layout_constraintStart_toStartOf="@id/iv_my_profile_image"
            android:layout_marginStart="12dp"
            android:layout_marginTop="4dp"
            android:text="승룰:  "
            style="@style/HeadLine5.Black"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/tv_my_win_rate_title"
            app:layout_constraintTop_toTopOf="@id/tv_my_win_rate_title"
            style="@style/HeadLine5.Black"

            app:layout_constraintBottom_toBottomOf="@id/tv_my_win_rate_title"
            android:text="53%"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="12dp"

        android:layout_marginHorizontal="8dp"
        android:background="@drawable/btn_radius_white"
        app:layout_constraintTop_toBottomOf="@id/cl_my_profile_info"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/tv_my_radar_chart_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="개인 지표 분석"
            style="@style/HeadLine4.Black"
            android:layout_marginTop="12dp"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="300dp"
            app:layout_constraintTop_toBottomOf="@id/tv_my_radar_chart_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"

            android:background="@drawable/sample_radar_graph"

            />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>